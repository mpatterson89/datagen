#:kivy 1.0

<TaskScreen>:
	FloatLayout:
		id: body
		canvas:
			Rectangle:
		    	source: '/home/mpatterson/Dev/kivy_stuff/DataGen/green_gradient4.jpg'
		    	size: self.size
		    	pos: self.pos
	    BoxLayout:
	    	orientation: 'vertical'
	    	
	    	Label:
	    		size_hint_y: .2
	    		text: "Tasks Data"
	    	BoxLayout:
	    		size_hint: 1.2, .5
	    	    Label:
	    	    	size_hint: .4,1
	    			text: "Type"
	    		BoxLayout:
	    			canvas:
	        			Color:
	            			rgba: .2, .2, .2, .5
	        			Rectangle:
	            			pos: self.pos
	            			size: self.size 
	    			orientation: 'horizontal'
	    			BoxLayout:
	    				orientation: 'vertical'
	    				Label:
	    					text: "Evs"
	        			CheckBox:
	        				id: cb_evs
	        				group: 'type'
	        		BoxLayout:
	        			orientation: 'vertical'
	        			Label:
	    					text: "Transport"
	        			CheckBox:
	        				id: cb_transport
	        				group: 'type'
	        				
	        		BoxLayout:
	        			orientation: 'vertical'
	        			Label:
	    					text: "Generic"
	        			CheckBox:
	        				id: cb_generic
	        				group: 'type'
	        	Label:
	        		size_hint: .5,.5
	        		text: ""
	        	BoxLayout:
	        		orientation: 'vertical'	
	        		Label:
	        			size_hint: 1,.1
	    				text: "Number of Tasks"
	    			BoxLayout:
		    			Slider:
		    				size_hint: 2,1
		    				id: s1
		    				min: 1
		    				max: 101
		    				value: 1
		    			Label:
		    				size_int: .1,1
		    				text:  '%s' % int(s1.value)
	    		Label:
	    			text: ""
	    	BoxLayout:
	    		size_hint: 1, .5
	    		
	    		BoxLayout:
	    			padding: 20
	    			Label:

	    				size_hint: 1,.5
	    				text: "Date Range"
	    			BoxLayout:
	    				Button:
	    					background_color: (.3, 1, 1, .3)
	    					size_hint: 1,.5
	    					text: "Start Date"
	    					on_press: root.manager.current = 'sed'
	    			BoxLayout:
	    				Button:
	    					background_color: (.3, 1, 1, .3)
	    					size_hint: 1, .5
	    					text: "End Date"
	    					on_press: root.manager.current = 'sed'
	    		BoxLayout:
	    			orientation: 'vertical'		
	    			Label:
	    				size_hint: 1, 1
	    				text: 'Duration(min)'	
	    			BoxLayout:	
	        			Label:
	    					text: "Min"
	    				Slider:
	    					id: sMin
	    					min: 1
	    					max: 101
	    					value: 1
	    				Label:
	    					text:  '%s' % int(sMin.value)
	    			BoxLayout:	
	        			Label:
	    					text: "Max"
	    				Slider:
	    					id: sMax
	    					min: sMin.value
	    					max: 101
	    					value: sMin.value
	    				Label:
	    					text:  '%s' % int(sMax.value)
	    	FloatLayout:
		    	size: 300,300
		    	Label:
		    		size_hint: .1, .1
		    		canvas:
	        			Color:
	            			rgba: .2, .2, .2, .5
	        			Rectangle:
	            			pos: self.pos
	            			size: self.size
		    		pos: 35, 233
			    	text: 'Priority'
			    BoxLayout:
			    	pos: 5, 180
			    	size_hint: .17,.2
			    	canvas:
	        			Color:
	            			rgba: .2, .2, .2, .5
	        			Rectangle:
	            			pos: self.pos
	            			size: self.size
			    	BoxLayout:
			    		orientation: 'vertical'
			    		Label:
			    			text: '0'
	    				CheckBox:
	    					id: pr0
	    					##group: 'priority'
	    			BoxLayout:
			    		orientation: 'vertical'
			    		Label:
			    			text: '1'
	    				CheckBox:
	    					id: pr1
	    					##group: 'priority'
		  
	    		BoxLayout:
	    			pos: 150, 140
	    			size_hint: .5, .5
	    			orientation: 'vertical'
	    			BoxLayout:
	    				size_hint: 1, .5
	    				canvas:
		        			Color:
		            			rgba: .2, .2, .2, .5
		        			Rectangle:
		            			pos: self.pos
		            			size: self.size
		    			Label:
		    				text: 'Random State'
			    		Switch:

			    			background_color: (.3, 1, 1, .3)
			    			text: 'Random State'
		    		BoxLayout:

		    			canvas:
		        			Color:
		            			rgba: .2, .2, .2, .5
		        			Rectangle:
		            			pos: self.pos
		            			size: self.size 
		    			orientation: 'horizontal'
		    			BoxLayout:

		    				orientation: 'vertical'
		    				Label:
		    					text: "Complete"
		        			CheckBox:
		        				id: state_complete
		        				group: 'state'
		        		BoxLayout:
		        			orientation: 'vertical'
		        			Label:
		    					text: "Started"
		        			CheckBox:
		        				id: state_started
		        				group: 'state'
		        				
		        		BoxLayout:
		        			orientation: 'vertical'
		        			Label:
		    					text: "Paused"
		        			CheckBox:
		        				id: state_paused
		        				group: 'state'
		        		BoxLayout:
		    				orientation: 'vertical'
		    				Label:
		    					text: "Waiting"
		        			CheckBox:
		        				id: state_waiting
		        				group: 'state'
		        		BoxLayout:
		    				orientation: 'vertical'
		    				Label:
		    					text: "Canceled"
		        			CheckBox:
		        				id: state_canceled
		        				group: 'state'
	    		
	    			
    			Button:
    				id: 'applyx'
    				size_hint: .2, .2
    				pos: 600, 30
    				background_color: (.3, 1, 1, .3)
    				text: 'Apply'
    				on_press: root.apply()##root.manager.current = 'menu'
    			BoxLayout:
    				orientation: 'vertical'
    				size_hint: .2, .3
    				pos: 600, 200
    				Label:
    					text: "Users(Seperate by comma)"
    				TextInput:
    					size_hint: 1,3
    					background_color: (.3, 1, 1, .3)


    			
	    			

	    	

